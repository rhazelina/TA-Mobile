<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND IMAGE -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/masuk_sebagai" />

    <!-- WRAPPER untuk membatasi lebar maksimal -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <!-- CONTENT CONTAINER dengan max width -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:maxWidth="480dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_blur"
            android:gravity="center_horizontal"
            android:padding="32dp">

            <!-- JUDUL -->
            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk"
                android:paddingBottom="85dp"
                android:textColor="#121212"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp" />

            <!-- INPUT USERNAME -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtNama"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_bg"
                android:hint="Masukkan Kode"
                android:imeOptions="actionNext"
                android:padding="12dp"
                android:textColor="#543434"
                android:textColorHint="#857D7D"
                android:layout_marginBottom="24dp" />

            <!-- INPUT PASSWORD -->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kata Sandi"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_bg"
                android:hint="Masukkan Kata Sandi"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#B34343"
                android:textColorHint="#857D7D"
                android:layout_marginBottom="32dp" />

            <!-- BUTTON -->
            <Button
                android:id="@+id/btnMasuk"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#000000"
                android:text="Masuk"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk untuk melanjutkan"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

    <!-- LOCK SCREEN - SWIPEABLE UP -->
    <FrameLayout
        android:id="@+id/lockScreenContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="0dp"
        app:behavior_hideable="true"
        android:clickable="true"
        android:focusable="true">

        <!-- Background semi transparan -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <!-- SWIPE UP INDICATOR dengan max width -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="480dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <!-- Gunakan icon yang sudah ada -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/arrow_up_float"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geser ke atas untuk masuk"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>