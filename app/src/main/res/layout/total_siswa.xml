<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <!-- BACKGROUND -->

    <!-- BACK BUTTON -->

    <!-- TITLE -->

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/data_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@null"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Total Siswa"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <!-- SEARCH BACKGROUND -->

    <!-- SEARCH ICON BUTTON -->

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@id/imageButton13"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:srcCompat="@drawable/rectangle_69" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView31"
        app:layout_constraintStart_toStartOf="@id/imageView31"
        app:layout_constraintTop_toTopOf="@id/imageView31"
        app:srcCompat="@drawable/rectangle_70__1_" />

    <!-- SEARCH ICON -->
    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="33dp"
        android:layout_height="38dp"
        android:background="#00FFFFFF"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView31"
        app:layout_constraintStart_toStartOf="@id/imageView31"
        app:layout_constraintTop_toTopOf="@id/imageView31"
        app:srcCompat="@drawable/search" />

    <!-- SEARCH EDITTEXT -->

    <!-- BUTTON TAMBAH BACKGROUND -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="119dp"
        android:layout_height="28dp"
        android:background="@null"
        android:hint="Cari nama siswa"
        android:inputType="text"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/imageView31"
        app:layout_constraintEnd_toEndOf="@id/imageView31"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/imageButton12"
        app:layout_constraintTop_toTopOf="@id/imageView31"
        app:layout_constraintVertical_bias="0.570" />

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:background="#04FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/imageView31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView31"
        app:srcCompat="@drawable/group_541" />

    <!-- ADD ICON -->
    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#04FFFFFF"
        android:padding="4dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/imageButton13"
        app:layout_constraintStart_toStartOf="@id/imageButton13"
        app:layout_constraintTop_toTopOf="@id/imageButton13"
        app:srcCompat="@drawable/add" />

    <!-- TAMBAH TEXT -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="Tambah"
        android:textColor="#F0EAEA"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageButton13"
        app:layout_constraintStart_toEndOf="@id/imageButton14"
        app:layout_constraintTop_toTopOf="@id/imageButton13" />

    <!-- HEADER TABLE -->

    <!-- RECYCLER VIEW -->

    <LinearLayout
        android:id="@+id/headerTable"
        android:layout_width="462dp"
        android:layout_height="38dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="-15dp"
        android:background="@drawable/rectangle_67"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView31">

        <TextView
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="#050505"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Nama"
            android:textColor="#040404"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="NISN"
            android:textColor="#070707"
            android:textStyle="bold" />

        <TextView
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Kelas"
            android:textColor="#090909"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Jurusan"
            android:textColor="#050505"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="JK"
            android:textColor="#090909"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Aksi"
            android:textColor="#050505"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- SECOND SEARCH EDITTEXT -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSiswa"
        android:layout_width="450dp"
        android:layout_height="718dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerTable"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Cari nama siswa"
        android:textColor="#090909"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageView31"
        app:layout_constraintStart_toEndOf="@id/imageButton12"
        app:layout_constraintTop_toTopOf="@id/imageView31" />

</androidx.constraintlayout.widget.ConstraintLayout>